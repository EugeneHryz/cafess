<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="File" fileName="cafe-app-${date:yyyyMMdd}.log" append="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Root>
        <Logger level="fatal" name="com.eugene.cafe.model.pool.ConnectionFactory" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Logger>
        <Logger level="fatal" name="com.eugene.cafe.model.pool.ConnectionPool" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Logger>
        <Logger level="info" name="com.eugene.cafe.controller.command.impl.ajax.AddItemToCartCommand" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Logger>
        <Logger level="info" name="com.eugene.cafe.controller.command.impl.go.GoToCheckoutPageCommand" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>